<% if current_user.email == @seller.email %>

  <h1>Edit your profile</h1>

  <%= simple_form_for [@seller] do |f| %>
    <%= f.input :company_name, label: "Modify your company name" %>
    <%= f.input :contact_person, label: "Modify your contact person" %>
    <%= f.input :address, label: "Modify your address" %>
    <%= f.button :submit %>
    <%= link_to "View all your orders", seller_products_path(@seller), class: "btn btn-primary" %>
    <%= link_to "Delete your account", seller_path(@seller),
    method: :delete,
    data: {confirm: "Are you sure?"},
    class: "btn btn-danger" %>
  <% end %>

<% else %>
  <h1>Please note you are not authorised to view this page.</h1>
<% end %>
