<% if current_user.email == "wouter_verhaeghe@hotmail.com" %>

<h1>Overview of all sellers</h1>

<% @sellers.each do |seller| %>
  <div class="card">
    <h3><%= seller.company_name %></h3>
    <p><%= seller.contact_person %></p>
    <p><%= seller.address %></p>
    <div><%= link_to "View", seller_path(seller), class: "btn btn-primary" %>
    </div>
    <div><%= link_to "Edit", edit_seller_path(seller), class: "btn btn-primary" %>
    </div>
    <div><%= link_to "Delete", seller_path(seller),
      method: :delete,
      data: {confirm: "Are you sure?"},
      class: "btn btn-danger" %>
    </div>
  </div>
  <% end %>
<% else %>
  <h1>Please note you are not authorised to view this page.</h1>
<% end %>
